<!DOCTYPE html>
<html>
  <head>
    <title>SAPER</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <%= link_to root_path, class: 'navbar-brand' do %>
          <%= image_tag asset_path('logo.png'), class: '', width: 40, height: 30 %>SAPER
        <% end %>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-outline-sucess " data-toggle="modal" data-target="#exampleModal">
                  <%= image_tag asset_path('upload.png'), class: '', width: 18, height: 18 %>
                </button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        ...
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= user_signed_in? ? current_user.email : 'Visitante' %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% if user_signed_in? %>
                  <%= link_to 'Deslogar', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
                <% else %>
                  <%= link_to 'Login', new_user_session_path, class: 'dropdown-item' %>
                  <%= link_to 'Cadastre-se', new_user_registration_path, class: 'dropdown-item' %>
                <% end %>
              </div>
            </li>
          </ul>
        </div>

      </div>
    </nav>

    <div class="container">
      <div class="row mt-5">
        <div class="col-md-3 sidebar">
          <div class="list-group">
                <span href="#" class="list-group-item cat-sidebar">
                    <span class="pull-right" id="slide-submenu">
                        <b class="fa fa-times">Categorias</b>
                    </span>
                </span>

            <a href="/" class="list-group-item texto-menu">
              <i class="fa fa-folder-open-o">
                <%= image_tag asset_path('sidebar/ic_home.png'), class: 'ico_sidebar' %> Home
              </i>
            </a>

            <a href="#" class="list-group-item texto-menu">
              <i class="fa fa-folder-open-o">
                <%= image_tag asset_path('sidebar/ic_tads.png'), class: 'ico_sidebar'%> TADS
              </i>
            </a>

            <a href="#" class="list-group-item texto-menu">
              <i class="fa fa-folder-open-o">
                <%= image_tag asset_path('sidebar/ic_mamb.png'), class: 'ico_sidebar' %> Meio Ambiente
              </i>
            </a>

            <a href="#" class="list-group-item texto-menu">
              <i class="fa fa-folder-open-o">
                <%= image_tag asset_path('sidebar/ic_mec.png'), class: 'ico_sidebar' %> Mecanica
              </i>
            </a>

            <a href="#" class="list-group-item texto-menu">
              <i class="fa fa-folder-open-o">
                <%= image_tag asset_path('sidebar/ic_fis.png'), class: 'ico_sidebar' %> Fisica
              </i>
            </a>

            <a href="#" class="list-group-item texto-menu">
              <i class="fa fa-bar-chart-o">
                <%= image_tag asset_path('sidebar/ic_soc.png'), class: 'ico_sidebar' %> Sociais
              </i>
            </a>

            <a href="#" class="list-group-item texto-menu">
              <%= image_tag asset_path('sidebar/ic_humor.png'), class: 'ico_sidebar' %> Humor
            </a>

            <a href="#" class="list-group-item texto-menu">
              <%= image_tag asset_path('sidebar/ic_b.png'), class: 'ico_sidebar' %> Diversos
            </a>

            <a href="#" class="list-group-item texto-menu">
              <%= image_tag asset_path('sidebar/ic_graph.jpg'), class: 'ico_sidebar' %> Gráfico
            </a>

            <a href="#" class="list-group-item texto-menu">
              <%= image_tag asset_path('sidebar/ic_relatorio.png'), class: 'ico_sidebar' %> Relatório
            </a>

          </div>
        </div>

        <div style="position: absolute; bottom: 0">
          <b style="font-size: 12px">&copy;2019 &nbsp;&nbsp;&raquo;&nbsp;&nbsp; Adriano Yasuda &nbsp;&nbsp;&raquo;&nbsp;&nbsp;versão 1.0</b>
        </div>

        <div class="col-md-7" >
          <div class="scroll-container square scrollbar-dusty-grass square thin">
            <div class="card-body">
              <%= yield %>
            </div>
          </div>
        </div>

      </div>
    </div>

  </body>
</html>
